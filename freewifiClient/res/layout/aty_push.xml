<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="initPush"
            android:id="@+id/initPush" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="stopPush"
            android:id="@+id/stopPush" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="resumePush"
            android:id="@+id/resumePush" android:layout_gravity="center_horizontal"/>
</LinearLayout>